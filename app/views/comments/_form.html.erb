<%= form_with(model: [ @project, @project.comments.build ], local: true , html: { class: 'px-4 py-5' }) do |form| %>
  <div class="mb-4">
    <%= form.label :body, "Leave a comment:" %><br>
    <%= form.text_area :body, rows: 4, class: "w-full border rounded-lg py-2 px-3" %>
  </div>
  <div class="flex justify-end">
    <%= form.submit "Add Comment", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
  </div>
<% end %>
