<div class="mt-8 px-4">
    <h2 class="text-lg leading-tight font-medium text-gray-900">Comments</h2>
    <% if @project.comments.any? %>
      <ul class="mt-4 space-y-4">
        <% @project.comments.each do |comment| %>
          <li class="border border-gray-300 rounded-md p-4">
            <div class="flex items-center justify-between">
              <h3 class="text-base font-medium text-gray-900"><%= comment.user.email %></h3>
              <time datetime="<%= comment.created_at.to_datetime.rfc3339 %>" class="text-gray-500 text-sm"><%= comment.created_at.strftime("%b %d, %Y") %></time>
            </div>
            <div class="mt-2 text-gray-700 text-sm">
              <%= comment.body %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="mt-4 text-gray-500">No comments yet.</p>
    <% end %>
  </div>
  <%= render 'comments/form' %>
